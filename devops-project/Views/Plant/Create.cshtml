@model Plant;

<h1 class="text-info">Create Plant</h1>
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Plant" asp-action="Create" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
            <h4>Create a Plant</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Location" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success form-control">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>